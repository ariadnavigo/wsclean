#!/bin/sh
# See LICENSE file for copyright and license details.

set -e

usage() {
	echo 'usage: wsclean [-d] file [...]' >&2
	exit 1
}

while getopts :d opt; do
	case "$opt" in
	d)	safe=1 ;;
	?)	usage ;;
	esac
done

shift $((OPTIND - 1))

if [ -z "$1" ]; then 
	usage
fi

for file in "$@"; do
	sed -E 's/[[:space:]]*$//' "$file" > "$file.new"
	if [ -z "$safe" ]; then
		mv "$file.new" "$file"
	fi
done

exit 0
